#create resource dynamic block for sg

resource "aws_security_group" "test-sg" {
  description = "Security group"

  dynamic "ingress" {
    iterator = port
    for_each = var.inbound
    content {
      from_port   = port.value
      to_port     = port.value
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  }

  dynamic "egress" {
    iterator = port
    for_each = var.outbound
    content {
      from_port   = port.value
      to_port     = port.value
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }

  }

}